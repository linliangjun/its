<schema xmlns="http://www.w3.org/2001/XMLSchema"
        xmlns:uniprotocol="https://its.linliangjun.cn/uniprotocol/0.0.1"
        targetNamespace="https://its.linliangjun.cn/uniprotocol/0.0.1">

    <element name="mapping">
        <complexType>
            <attribute name="message-class" type="string"/>
            <attribute name="codec-class" type="string"/>
        </complexType>
    </element>

    <element name="mappings">
        <complexType>
            <sequence>
                <element ref="uniprotocol:mapping" maxOccurs="unbounded"/>
            </sequence>
            <attribute name="message-class-prefix" type="string"/>
            <attribute name="codec-class-prefix" type="string"/>
        </complexType>
    </element>

    <element name="protocol">
        <complexType>
            <sequence>
                <element ref="uniprotocol:mappings"/>
            </sequence>
            <attribute name="name" type="string" use="required"/>
            <attribute name="version" type="string" use="required"/>
        </complexType>
    </element>

    <element name="uniprotocol">
        <complexType>
            <sequence>
                <element ref="uniprotocol:protocol" maxOccurs="unbounded"/>
            </sequence>
        </complexType>
    </element>
</schema>
